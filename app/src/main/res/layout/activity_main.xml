<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF66B4CC"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_above="@+id/skb1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/ly01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#8C1715"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                ></LinearLayout>

            <LinearLayout
                android:id="@+id/ly02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#105410"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"></LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/ly03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#888888"
                android:layout_marginBottom="8dp"></LinearLayout>

            <LinearLayout
                android:id="@+id/ly04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7A5F15"
                android:layout_marginBottom="8dp"></LinearLayout>
            <LinearLayout
                android:id="@+id/ly05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fdfeff"></LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <SeekBar
        android:id="@+id/skb1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:max="100"
        android:layout_alignParentBottom="true">
    </SeekBar>
</RelativeLayout>
